
#include <stdio.h>
#include <stdlib.h>

int N; 
float *x, *b; 
int inputData ()
{
	printf ("Vvedite kolichestvo poslednih otschetov signala: N = ");
	scanf ("%d", &N); 
	if (N <= 0) 
  { 
		printf ("ploho");
		return 1; 
	}
	x = (float *)malloc(N * sizeof(float)); 
	b = (float *)malloc(N * sizeof(float)); 
	printf ("\nVvod vhodnogo signala\n");
	for (int i = 0; i < N; i ++) 
  { 
		printf ("x[n - %d] = ", i);
		scanf ("%f", &x[i]);
	}
	printf ("\nVvod coefficientov usileniya\n");
	for (int i = 0; i < N; i ++)
  { 
		printf ("b%d = ", i);
		scanf ("%f", &b[i]);
	}
	return 0;
}

float calcY () 
{
	float tempY = 0.0;
	for (int i = 0; i < N; i ++) 
  { 
		tempY += b[i] * x[i];
	}
	return tempY;
}

int main() 
{
	if (inputData() == 0) 
  { 
		printf ("\nVihodnoy signal Y = %f\n", calcY());
		free (x); 
		free (b); 
	}
	system ("pause"); 
	return 0;
}
