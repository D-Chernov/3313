
#include <stdio.h>
#include <stdlib.h>

int P = 2; 
float x[3], b[3]; 
float y[3]; 

void inputData ()
{ 
	printf ("\nVvod vhodnogo signala\n");
	for (int i = 0; i <= P; i ++) 
	{ 
		printf ("x[n - %d] = ", i);
		scanf ("%f", &x[i]);
	}
	printf ("\nVvod coefficientov usileniya\n");
	for (int i = 0; i <= P; i ++) 
	{ 
		printf ("b%d = ", i);
		scanf ("%f", &b[i]);
	}
}

void calcY () 
{ 
	float tempY = 0.0;
	for (int i = 0; i <= P; i ++) 
	{ 
		tempY += b[i] * x[i];
		y[i] = tempY;
	}
}

int main() 
{
	inputData(); 
	calcY();
	printf ("\nVihodnoy signal:\n");
	for (int i = 0; i <= P; i ++) 
	{ 
		printf ("Y[%d] = %f\n", i, y[i]);
	}
	system ("pause"); 
	return 0;
}

