#include <stdio.h>
#include <stdlib.h>

int N, P = 2;
float *x, *y, b[3];

int inputData ()
{ 
	printf ("Vvedite kolichestvo poslednih otschetov signala: N = ");
	scanf ("%d", &N); 
	if (N <= 2) 
	{ 
		printf ("ploho, N <= 2\n");
		return 1; 
	}
	x = (float *)malloc(N * sizeof(float)); 
	y = (float *)malloc(N * sizeof(float)); 
	printf ("\nVvod vhodnogo signala\n");
	for (int i = 0; i < N; i ++) 
	{ 
		printf ("x[%d] = ", i);
		scanf ("%f", &x[i]);
	}
	printf ("\nVvod coefficientov usileniya\n");
	for (int i = 0; i <= P; i ++) 
	{ 
		printf ("b%d = ", i);
		scanf ("%f", &b[i]);
	}
	return 0;
}

float calcY (int n) 
{ 
	float tempY = 0.0;
	for (int i = 0; i <= P; i ++) 
	{
		tempY += b[i] * x[n - i];
	}
	return tempY;
}

int main()
{
	if (inputData() == 0) 
	{ 
		for (int n = 2; n < N; n ++)
		{
			y[n] = calcY(n); 
			printf ("\nVihodnoy signal Y[%d] = %f\n", n, y[n]); 
		}
		free (x); 
		free (y); 
	}
	system ("pause");
	return 0;
}

